                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.fabiandrees.screens.NewCard"
            android:label="@string/title_activity_new_card"
